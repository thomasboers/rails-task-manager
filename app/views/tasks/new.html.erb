<!-- form for implementeren en het object geven uit de new methode -->
<%= form_for(@task) do |f| %>
<%= f.label :description, "write your description" %>
<%= f.text_field :description %>

<%= f.label :status, "To do", value: false %>
<%= f.radio_button :status, false, :value =>false %>
<%= f.label :status, "Done", value: true %>
<%= f.radio_button :status, true, :value =>true %>

<%= f.submit %>
<% end %>


